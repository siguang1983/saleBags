/**index.wxss**/
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

.swiper-container {
    width: 750rpx;
    position: relative;
    height: 440rpx;
}

.swiper-box {
    width: 100%;
    height: 100%;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
    height: 440rpx;
}

.swiper-container .dots {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 20rpx;
    display: flex;
    justify-content: center;
}

.swiper-container .dots .dot {
    margin: 0 8rpx;
    width: 14rpx;
    height: 14rpx;
    background: #fff;
    border-radius: 50%;
    transition: all 0.6s;
    opacity: 0.5;
    border: 1px #ccc solid;
}

.swiper-container .dots .dot.active {
    width: 14rpx;
    opacity: 1;
}

.notice { 
    display: flex;
    flex-flow: flex-direction;
    padding: 30rpx 0;
    background-color:#fff;
}

.coupons-container {
    width: 100%; 
    height: 180rpx;
    padding: 10rpx 0;
    background-color:#fff;
    line-height: 20px;
    overflow: hidden;
    box-sizing: padding-box;
}
.coupons-scroll {
    white-space: nowrap;
    height: 180rpx;
    width: 100%;
    background-color: #fff;
}
.coupons-item {
    width: 280rpx;
    height: 170rpx;
    background-color: #f7a52f;
    padding: 10rpx;
    color: #fff;
    display: inline-block;
    overflow: hidden;
    margin: 0 10rpx;
}

.goods-container {
    display: flex;
    justify-content: space-between;  
    flex-wrap:wrap;
    box-sizing: content-box;
    padding: 24rpx;
}

.goods-item {
    width: 340rpx; 
    height: 450rpx;
    background-color: #fff;
    margin-bottom: 24rpx;
    overflow: hidden;
}

.notice-title { 
    width: 100rpx;
    margin-left: 20rpx;
    color: #cbcbcb;
}

.goods-item .goods-img {
    width: 340rpx;
    height: 340rpx;
    overflow: hidden;
}
.goods-img image {
    width: 100%;
    height: 100%;
}
.goods-describe {
    height: 34rpx;
    padding: 15rpx 10rpx 10rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.goods-price {
    color: red;
    font-size: 26rpx;
    padding: 0 10rpx;
}









